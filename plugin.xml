<?xml version="1.0" encoding="UTF-8"?>
<plugin id="mein-fan" version="1.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>lmein-fan</name>
    <description>admob facebook test</description>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <platform name="android">
        <framework src="com.facebook.android:audience-network-sdk:5.4.0" />
        <framework src="com.google.ads.mediation:facebook:5.4.1.0" />
        <framework src="com.google.android.gms:play-services-base:17.0.0" />
        <framework src="com.google.android.gms:play-services-ads:18.1.1" />
        <framework src="com.android.support:support-v13:28.0.0" />
        
       
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
          <activity android:name="com.facebook.ads.AudienceNetworkActivity" android:configChanges="keyboardHidden|orientation|screenSize" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
          <uses-permission android:name="android.permission.INTERNET" />
          <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>
        
        <!-- Prevents compilation error: https://developer.android.com/studio/build/multidex.html -->
        <!-- when add additional mediation plugins -->
        <dependency id="cordova-plugin-enable-multidex" />
    </platform>

 </plugin>
