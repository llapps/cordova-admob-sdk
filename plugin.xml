<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-admob-sdk" version="0.24.1"
    xmlns="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>cordova-admob-sdk</name>
    <description>cordova-admob-sdk</description>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <platform name="android">
        <framework src="com.google.android.gms:play-services-ads:+" />
        <framework src="com.facebook.android:audience-network-sdk:+" />
        <framework src="com.google.ads.mediation:facebook:+" />
        <framework src="androidx.collection:collection:+" />
        <framework src="androidx.core:core:+" />
        <framework src="androidx.fragment:fragment:+" />
        <framework src="androidx.annotation:annotation:+" />
        <framework src="androidx.browser:browser:+" />
        <framework src="androidx.legacy:legacy-support-v4:+" />
        <framework src="androidx.recyclerview:recyclerview:+" />
        <framework src="com.google.android.gms:play-services-base:+" />

        <!-- Prevents compilation error: https://developer.android.com/studio/build/multidex.html -->
        <!-- when add additional mediation plugins -->
        
    </platform>

 </plugin>
